{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json"
  ],
  "cleanTempDir": false,
  "testRunner": "mocha",
  "mutate": ["src/**/*.js"],
  "mochaOptions": {
    "spec": [ "test/**/*test*.js" ]
  },
  "coverageAnalysis": "perTest",
  "disableBail": true
}
